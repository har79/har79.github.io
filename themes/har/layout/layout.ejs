<%- partial('partial/head') %>

<header>
	<div class="header-content">
		<h1>
			<a class="logo-link" href="<%= config.url %>">
				<%- partial('partial/logo') %>
			</a>
		</h1>

		<nav>
			<ul class="nav-links">
				<% for (const page in site.pages) { %> <% if (page.title &&
				!page.hidden) { %>
				<li><a href="<%- url_for(page.path) %>"><%= page.title %></a></li>
				<% } %> <% } %>
			</ul>
		</nav>
	</div>
</header>

<main>
	<div class="main-content">
		<%- body %>
	</div>
</main>

<footer>
	<div class="footer-content">
		<ul>
			<li>
				<a
					href="<%- config.repo + '/edit/master/' + page.path %>"
					target="_blank"
				>
					Edit this page
				</a>
			</li>
			<li>
				<a
					id="bug-link"
					href="<%- config.repo + '/issues/new?title=Bug+in+' + page.path %>"
					target="_blank"
				>
					Report bug
				</a>
			</li>
		</ul>
	</div>
</footer>

<script>
	// Add user agent to bug link.
	document.addEventListener('DOMContentLoaded', function () {
		var link = document.getElementById('bug-link');
		if (link === null) return;
		link.setAttribute(
			'href',
			link.getAttribute('href') +
				'&body=User+agent%3A+' +
				encodeURIComponent(navigator.userAgent) +
				'%0A%0ADescribe+the+bug+here%3A%0A%0A',
		);
	});
</script>
